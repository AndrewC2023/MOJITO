{
  "name": "MOJITO Development Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },

  "remoteUser": "root",

  "mounts": [
    "source=${localWorkspaceFolder}/dependencies,target=/workspaces/${localWorkspaceFolderBasename}/dependencies,type=bind,consistency=cached"
  ]
}
